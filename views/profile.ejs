<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/" class="btn btn-default btn-sm">Home</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-4">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>email</strong>: <%= user.localemail %><br>
                        <strong>password</strong>: <%= user.localpassword %>
                    </p>

            </div>
        </div>

        <div class="col-sm-4">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                    <p>
                        <strong>id</strong>: <%= user.facebookid %><br>
                        <strong>token</strong>: <%= user.facebooktoken %><br>
                        <strong>email</strong>: <%= user.facebookemail %><br>
                        <strong>name</strong>: <%= user.facebookname %>
                    </p>

            </div>
        </div>

        <div class="col-sm-4">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-user"></span> PayPal</h3>

                    <p>
                        <strong>id</strong>: <%= user.paypalid %><br>
                        <strong>token</strong>: <%= user.paypaltoken %><br>
                        <strong>email</strong>: <%= user.paypalemail %><br>
                        <strong>name</strong>: <%= user.paypalname %>
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>